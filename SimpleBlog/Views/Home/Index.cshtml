@model IEnumerable<SimpleBlog.Models.Post>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>The Simplest of Blogs</h1>
    <p class="lead">Built with ASP.NET MVC</p>
    <a class="btn btn-primary btn-lg" href="@Url.Action("Index", new { Controller = "Posts" })">All Posts &raquo</a>
</div>

<div class="row">
    @foreach (var post in Model) {
        <div class="col-md-4">
            <h2>@post.Title</h2>
            <p>@post.Body</p>
            <a class="btn btn-default" href="@Url.Action("Details", new { Controller = "Posts", Id = post.PostId })">Read more &raquo;</a>
        </div>
    }
</div>